#cloud-config

#
# First we'll update the repo and then update the OS.
#
package_update: true
package_ugrade: true

#
# Install packages
#
packages:
  - nfs-utils

#
# Add nfs mounts
#
runcmd:
  - mkdir /mnt/viya-share
  #
  # fstab entry
  #
  - echo "${rwx_filestore_endpoint}:${rwx_filestore_path}    /mnt/viya-share    nfs    nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2,noresvport 0 0" >>/etc/fstab
  #
  # mount the nfs
  #
  - systemctl enable NetworkManager-wait-online.service
  - mount -a
  #
  # Change permissions and owener
  #
  - mkdir -p /mnt/viya-share/pvs
  - chmod 777 /mnt/viya-share -R
  - chown -R nobody:nobody /mnt/viya-share
